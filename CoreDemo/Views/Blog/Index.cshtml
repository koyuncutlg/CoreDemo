@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!-- **************** MAIN CONTENT START **************** -->
<main>
    <!-- =======================
    Inner intro START -->
    <section class="pt-4">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="border p-4 text-center rounded-3">
                        <h1 class="text-dark">Blog</h1>
                        <nav class="d-flex justify-content-center" aria-label="breadcrumb">

                            <ol class="breadcrumb breadcrumb-dots m-0">
                                <li class="breadcrumb-item"><a href="/Home"><i class="bi bi-house me-1"></i> Anasayfa</a></li>
                                <li class="breadcrumb-item active">Blog</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- =======================
    Inner intro END -->
    <!-- =======================
    Main content START -->
    <section class="position-relative pt-0">
        <div class="container">
            <div class="row filter-container overflow-hidden" data-isotope='{"layoutMode": "masonry"}'>
                <!-- Card item START -->
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-lg-4 grid-item">
                        <div class="card mb-4">
                            <!-- Card img -->
                            <div class="card-fold position-relative">
                                <img class="card-img" src="@item.BlogImage" alt="Card image">
                                <div class="card-img-overlay d-flex align-items-start flex-column p-3">
                                    <!-- Card overlay bottom -->
                                    <div class="w-100 mt-auto">
                                        <!-- Card category -->
                                        <a href="#" class="badge text-bg-warning mb-2"><i class="fas fa-circle me-2 small fw-bold"></i>@item.Category.CategoryName</a>
                                    </div>
                                </div>                               
                            </div>
                            <div class="card-body px-0 pt-3">
                                <h4 class="card-title"><a href="/Blog/BlogReadAll/@item.BlogID/" class="btn-link text-reset stretched-link fw-bold">@item.BlogTitle</a></h4>
                                <p class="card-text">@item.BlogContent.Substring(0,item.BlogContent.Substring(0,130).LastIndexOf(" "))... </p>
                                <!-- Card info -->
                                <ul class="nav nav-divider align-items-center text-uppercase small">
                                    <li class="nav-item">
                                        <a href="#" class="nav-link text-reset btn-link">Lori Stevens</a>
                                    </li>
                                    <li class="nav-item">@(((DateTime)item.BlogCreateDate).ToString("dd MMM yyyy"))</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                <!-- Card item END -->
            </div> <!-- Row end -->
        </div>
    </section>
    <!-- =======================
    Main content END -->

</main>
<!-- **************** MAIN CONTENT END **************** -->