@model IEnumerable<EntityLayer.Concrete.Comment>
<!-- Comments START -->
<div class="mt-5">
    <h3>Yorumlar</h3>
    @foreach (var item in Model)
    { 
    <!-- Comment level 1-->
    <div class="my-4 d-flex">
        <img class="avatar avatar-md rounded-circle float-start me-3" src="~/blogzine/assets/images/avatar/01.jpg" alt="avatar">
        <div>
            <div class="mb-2">
                <h5 class="m-0">@item.CommentUserName</h5>
                    <span class="me-3 small">@(((DateTime)item.CommentDate).ToString("dd MMM yyyy")) </span>               
            </div>
            <p>@item.CommentContent</p>
        </div>
    </div>
    }
</div>
<!-- Comments END -->